@model List<migajas_amor.app.Models.UsuarioRol>

<h2>Usuarios y Roles</h2>
<table class="table">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Login</td>
                <td>@string.Join(", ", usuario.Roles)</td>
            </tr>
        }
    </tbody>
</table>