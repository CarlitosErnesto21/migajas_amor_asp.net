@model List<migajas_amor.app.Models.UsuarioRol>
@using migajas_amor.app.Utilidades;
@{
    ViewData["Title"] = "Usuarios y Roles ";

    Paginacion paginacion = new Paginacion();
    int paginaActual = 0;
    if (ViewBag.Paginacion != null)
    {
        paginacion = ViewBag.Paginacion;
        paginaActual = paginacion.PaginaActual;
    }

    var search = Context.Request.Query["search"].ToString();
}

<style>
    .usuarios-box {
        max-width: 1350px;
        margin: 2.2rem auto 0 auto;
        padding: 0 2.8rem 2.2rem 2.8rem;
    }

    .usuarios-title {
        font-family: 'Pacifico', cursive, 'Brush Script MT', sans-serif;
        color: #b5838d;
        font-size: 2.6rem;
        letter-spacing: 1.2px;
        margin-bottom: 0.05rem; /* Reduce separation below title */
        margin-top: 0.05rem; /* Reduce separation above title */
        text-align: left;
    }

    .busqueda-align-right {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 0.05rem; /* Reduce separation below search */
    }

    .table-usuarios {
        background: #fff6f3;
        border-radius: 1.1rem;
        box-shadow: 0 2px 10px rgba(186,104,200,0.07);
        overflow: hidden;
        margin-bottom: 1.5rem;
        margin-top: 0.05rem; /* Reduce separation above table */
        width: 100%;
        table-layout: auto;
    }

        .table-usuarios th {
            background: linear-gradient(90deg, #ffe5ec 0%, #e0c3fc 100%);
            color: #b5838d;
            font-weight: 700;
            letter-spacing: 0.5px;
            font-size: 1.05rem;
            border: none;
            text-align: center;
            padding: 0.75rem 0.6rem;
            white-space: nowrap;
        }

        .table-usuarios td {
            color: #864879;
            background: #fff;
            border: none;
            vertical-align: middle;
            text-align: center;
            font-size: 1rem;
            padding: 0.7rem 0.6rem;
        }

        .table-usuarios tr:not(:last-child) td {
            border-bottom: 1px solid #f7b2ad;
        }
</style>

<div class="usuarios-box">
    <div class="usuarios-title">Usuarios y Roles</div>

    <div class="busqueda-align-right">
        @await Html.PartialAsync("_CuadroBusqueda", search)
    </div>

    <table class="table table-usuarios">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Roles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Login</td>
                    <td>@string.Join(", ", usuario.Roles)</td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_paginacion" model="@paginacion" />
</div>