@model migajas_amor.app.Models.Producto

@{
    ViewData["Title"] = "Create";
}

<style>
    .producto-create-box {
        max-width: 520px;
        margin: 2.2rem auto 0 auto;
        background: #fff6f3;
        border-radius: 1.2rem;
        box-shadow: 0 2px 12px rgba(186,104,200,0.11);
        padding: 2.1rem 2.2rem 1.5rem 2.2rem;
    }

    .producto-create-title {
        font-family: 'Pacifico', cursive, 'Brush Script MT', sans-serif;
        color: #b5838d;
        font-size: 2.2rem;
        letter-spacing: 1.2px;
        margin-bottom: 0.4rem;
        margin-top: 0.1rem;
        text-align: left;
    }

    .producto-create-subtitle {
        font-size: 1.25rem;
        color: #a66eb8;
        font-family: 'Roboto', Arial, sans-serif;
        margin-bottom: 1.1rem;
        font-weight: 500;
    }

    .producto-create-form .form-group label {
        color: #864879;
        font-weight: 500;
        letter-spacing: 0.5px;
        margin-bottom: 0.2rem;
    }

    .producto-create-form .form-control {
        border-radius: 0.7rem;
        border: 1.5px solid #f7b2ad;
        padding: 0.53rem 1rem;
        font-size: 1.07rem;
        color: #864879;
        background: #fff;
        margin-bottom: 0.15rem;
        box-shadow: 0 1px 4px rgba(186,104,200,0.06);
        transition: border-color 0.14s;
    }

        .producto-create-form .form-control:focus {
            border-color: #b5838d;
            outline: none;
            background: #fffdfa;
        }

    .producto-create-form .text-danger {
        font-size: 0.97rem;
        color: #f4845f !important;
    }

    .producto-create-form .btn-crear {
        background: linear-gradient(90deg, #f7b267 0%, #f4845f 100%);
        color: #fff;
        border: none;
        border-radius: 0.9rem;
        font-weight: 600;
        font-size: 1.07rem;
        padding: 0.5rem 1.6rem;
        margin-top: 0.6rem;
        box-shadow: 0 2px 8px rgba(244,132,95,0.09);
        transition: background 0.16s;
    }

        .producto-create-form .btn-crear:hover, .producto-create-form .btn-crear:focus {
            background: linear-gradient(90deg, #f4845f 0%, #f7b267 100%);
            color: #fff;
        }

    .producto-create-back {
        display: inline-block;
        margin-top: 0.7rem;
        color: #b5838d;
        font-weight: 500;
        text-decoration: none;
        font-size: 1.06rem;
        transition: color 0.16s;
    }

        .producto-create-back:hover {
            color: #f4845f;
            text-decoration: underline;
        }
</style>

<div class="producto-create-box">
    <div class="producto-create-title">Crear Producto</div>
    <div class="producto-create-subtitle">Ingresa los datos del nuevo producto</div>
    <form asp-action="Create" class="producto-create-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descripcion" class="control-label"></label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Precio" class="control-label"></label>
            <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Stock" class="control-label"></label>
            <input asp-for="Stock" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-crear" />
        </div>
    </form>
    <a asp-action="Index" class="producto-create-back">&larr; Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}